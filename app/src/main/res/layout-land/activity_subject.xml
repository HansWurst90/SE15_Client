<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="4"
    android:paddingBottom="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
        <TableRow
            android:id="@+id/headerRow1">
            <TextView
                android:text="@string/subject_label"
                android:textSize="@dimen/textview_size"
                android:paddingLeft="@dimen/padding_left"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:paddingRight="@dimen/padding_right"/>
            <TextView
                android:textSize="@dimen/textview_size"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:id="@+id/description_value"
                android:text="@string/subject_value"/>
        </TableRow>
        <TableRow
            android:id="@+id/headerRow2">
            <TextView
                android:text="@string/teacher_label"
                android:textSize="@dimen/textview_size"
                android:paddingLeft="@dimen/padding_left"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:paddingRight="@dimen/padding_right"/>
            <TextView
                android:text="@string/teacher_value"
                android:textSize="@dimen/textview_size"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:id="@+id/teacher_value" />
        </TableRow>
        <View
            android:layout_height="@dimen/bar_size"
            android:background="@color/black"/>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/room_label"
                android:textSize="@dimen/textview_size"
                android:paddingLeft="@dimen/padding_left"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:paddingRight="@dimen/padding_right"/>

            <TextView
                android:text="@string/room_value"
                android:textSize="@dimen/textview_size"
                android:paddingLeft="20dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:id="@+id/room_value" />
        </TableRow>
        <View
            android:layout_height="@dimen/bar_size"
            android:background="@color/black"/>
        <TableRow>
            <TextView
                android:text="@string/from_label"
                android:textSize="@dimen/textview_size"
                android:paddingLeft="@dimen/padding_left"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:paddingRight="@dimen/padding_right"/>
            <TextView
                android:text="@string/from_value"
                android:textSize="@dimen/textview_size"
                android:paddingLeft="20dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:id="@+id/from_value" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/to_label"
                android:textSize="@dimen/textview_size"
                android:paddingLeft="@dimen/padding_left"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:paddingRight="@dimen/padding_right"/>
            <TextView
                android:text="@string/to_value"
                android:textSize="@dimen/textview_size"
                android:paddingLeft="20dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:id="@+id/to_value" />
        </TableRow>

        <View
            android:layout_height="@dimen/bar_size"
            android:background="@color/black"/>

    </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="438dp"
            android:text="@string/homework_label"
            android:textSize="@dimen/textview_size"
            android:paddingLeft="@dimen/padding_left"
            android:paddingTop="@dimen/padding_top"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingRight="6dp"
            android:layout_gravity="center"/>
        <CheckBox
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/checkbox"
            android:button="@null"
            android:id="@+id/homework_checkbutton"
            android:onClick="homeworkToast"
            />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="@string/homework_hint"
            android:textSize="@dimen/textview_size"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:paddingTop="@dimen/padding_top"
            android:id="@+id/homework_value"
            android:onClick="homeworkTextClick"
            />

    </LinearLayout>
</ScrollView>